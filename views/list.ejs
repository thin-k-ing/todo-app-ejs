<%- include('header') %>

    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>

    <div class="box" id="">
        <% for(let i = 0; i < items.length; i++) { %>
            <div class="item">
                <input type="checkbox">
                <p>
                    <%= items[i] %>
                </p>
            </div>
            <% } %>
                <form action="/" method="post" class="item">
                    <input type="text" placeholder="Enter new ToDo" name="newToDo">
                    <button type="submit" value="<%= listTitle %>" name="submitButton">+</button>
                </form>
    </div>

    <%- include('footer') %>